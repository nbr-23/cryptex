{% extends 'base.html.twig' %}

{% block body %}

<!-- Page Header -->
<header class="masthead" style="background-image: url('img/home-bg.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Blog</h1>
          <span class="subheading">Cupcake ipsum dolor sit amet tootsie roll. I love cake powder. Gummi bears cookie
            liquorice apple pie.</span>
            <a href="https://github.com/nbr-23/cryptex" class="btn btn-primary bouton" target="_blank">code on github</a>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- Main Content -->
<div class="container">
  <div class="row">
    {% for article in articles %}
    <div class="col-lg-8 col-md-10 mx-auto">
      <article>
        <h2>{{ article.title }}</h2>

        <a href="{{ path('blog_show', {'id': article.id} )}}" class="btn btn-primary">Lire la suite</a>

        <p class="post-meta">Post√© le {{ article.createdAt | date('d/m/Y')}}</p>
      </article>
    </div>
    {% endfor %}
    
    <div class="col-lg-8 col-md-10 mx-auto">
      <hr>
      <a href="{{ path('default')}}" class="btn btn-success">Voir tous les articles</a>
      <hr>
    </div>
    
  </div>
  
</div>
</div>
<!-- Footer -->
<footer>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <ul class="list-inline text-center">
          <li class="list-inline-item">
            <a href="#">
              <span class="fa-stack fa-lg">
                <i class="fas fa-circle fa-stack-2x"></i>
                <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
              </span>
            </a>
          </li>
          <li class="list-inline-item">
            <a href="#">
              <span class="fa-stack fa-lg">
                <i class="fas fa-circle fa-stack-2x"></i>
                <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
              </span>
            </a>
          </li>
          <li class="list-inline-item">
            <a href="#">
              <span class="fa-stack fa-lg">
                <i class="fas fa-circle fa-stack-2x"></i>
                <i class="fab fa-github fa-stack-1x fa-inverse"></i>
              </span>
            </a>
          </li>
        </ul>
        <p class="copyright text-muted">Copyright &copy; Blog 2020</p>
      </div>
    </div>
  </div>
</footer>

{% endblock body %}